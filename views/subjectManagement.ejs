<!DOCTYPE html>
<html>

<head>

    <%- include('./partials/style.ejs') %>
</head>

<body>
    <div id="wrapper">
        <%- include('./partials/menu.ejs') %>

            <!-- side bar end -->
            <div id="page-wrapper" class="gray-bg">
                <!-- top nav start -->
                <%- include('./partials/header.ejs') %>

                    <!-- top nav end -->
                    <div class="wrapper wrapper-content profile-page">
                        <div class="ibox ">
                            <div class="ibox-title d-flex justify-content-between align-items-center meta-title">
                                <h5>Subject Management</h5>
                                <!-- <div class="d-flex justify-content-end" id="createRoleButton"> -->
                                <a href="#!" class="btn btn-primary" data-toggle="modal"
                                    data-target="#createSubject">Create Subject</a>
                                <!-- </div><br /> -->

                            </div>
                            <div class="ibox-content ">
                                <div class="row align-items-center">
                                    <div class="col-md-12">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered table-hover"
                                                id="subjectTable" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th>Name</th>
                                                        <th>Code</th>
                                                        <th>Action</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for(let i=0; i < list.length; i++) { %>
                                                        <tr>
                                                            <td>
                                                                <%= list[i].name %>
                                                            </td>
                                                            <td>
                                                                <%= list[i].code %>
                                                            </td>
                                                            <td>
                                                                <a href="javascript:"
                                                                    onclick="setSubjectdetails('<%= list[i]._id %>','<%= list[i].name %>','<%= list[i].code %>')"><i
                                                                        class="fa fa-edit"></i></a>
                                                                <a href="javascript:"
                                                                    onclick="deleteSubject('<%= list[i]._id %>')"><i
                                                                        class="fa fa-trash"></i></a>
                                                               
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
            </div>

    </div>
    <div class="modal fade" id="createSubject" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered createTeam" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <h3 class="title">Create Subject</h3>
                    <button type="button" class="close modal-close-btn" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <form id="createSubjectForm">
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">Subject Name</label>
                            </div>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="name" name="name"
                                    placeholder="Enter Subject Name">
                            </div>
                        </div>

                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">Subject Code</label>
                            </div>
                            <div class="col-sm-6">
                                <input type="number" class="form-control" id="code" name="code"
                                    placeholder="Enter Subject Code">
                            </div>
                        </div>

                        <div class="row justify-content-center mt-4">
                            <div class="col-sm-3 col-6">
                                <input class="btn btn-primary btn-block" type="button" aria-label="Create"
                                    value="Create" onclick="createSubject()">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="updateSubject" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered createTeam" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <h3 class="title">Updaet Subject</h3>
                    <button type="button" class="close modal-close-btn" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <form id="updateSubjectForm">
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">Subject Name</label>
                            </div>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="name_edit" name="name_edit"
                                    placeholder="Enter Subject Name">
                            </div>
                        </div>

                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">Subject Code</label>
                            </div>
                            <div class="col-sm-6">
                                <input type="number" class="form-control" id="code_edit" name="code_edit"
                                    placeholder="Enter Subject Code">
                            </div>
                        </div>

                        <div class="row justify-content-center mt-4">
                            <div class="col-sm-3 col-6">
                                <input class="btn btn-primary btn-block" type="button" aria-label="Update"
                                    value="Update" onclick="updateSubject()">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/footer.ejs') %>
        </div>
        </div>
        <%- include('./partials/script.ejs') %>

            <script src="/js/custom/subjectManagement.js"></script>
</body>

</html>