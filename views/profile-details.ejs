<!DOCTYPE html>
<html>

<head>

    <%- include('./partials/style.ejs') %>
</head>

<body>
    <div id="wrapper">
        <%- include('./partials/menu.ejs') %>
        <!-- side bar end -->
        <div id="page-wrapper" class="gray-bg">
            <!-- top nav start -->
            <%- include('./partials/header.ejs') %>
            <!-- top nav end -->
            <div class="wrapper wrapper-content profile-page">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Profile Details</h5>
                    </div>
                    <div class="ibox-content ">
                        <div class="row border-bottom pb-3 align-items-center">
                            <div class="col-md-6">
                                <div class="profile-image">
                                    <img alt="image" class="rounded-circle" src=<%= `/images/${user.profilePic}` %>
                                        class="rounded-circle circle-border" alt="profile" />
                                </div>
                                <div class="profile-info">
                                    <div class="">
                                        <div>
                                            <input type="hidden" id="userId" value="">
                                            <h2 class="no-margins">
                                                <%= user.firstName %> <%= user.lastName %>
                                            </h2>
                                            <h4><%= user.email %></h4>
                                            <h4><%= user.role %></h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- row end -->
                        <div class="row mt-2">
                            <div class="col-xl-6">
                                <div class="card-wrapper">
                                    <form>
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-lg-3 col-xl-5 col-form-label">Name</label>
                                            <div class="col-sm-7 col-lg-9 col-xl-7">
                                                <p><%= user.firstName %> <%= user.lastName %>
                                                </p>
                                            </div>
                                        </div>
                                       
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-lg-3 col-xl-5 col-form-label">Phone
                                                Number</label>
                                            <div class="col-sm-7 col-lg-9 col-xl-7">
                                                <p><%= user.phone %></p>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-lg-3 col-xl-5 col-form-label">Email
                                                Address</label>
                                            <div class="col-sm-7 col-lg-9 col-xl-7">
                                                <p><%= user.email %></p>
                                            </div>
                                        </div>
                                        
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-lg-3 col-xl-5 col-form-label">Enrolled
                                                Subjects</label>
                                            <div class="col-sm-7 col-lg-9 col-xl-7">
                                                <p>
                                                    <% for(let i=0; i < user.subjects.length; i++) { %>
                                                    <%= user.subjects[i].name %>
                                                    <% } %>
                                                </p>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <!-- card-wrapper end -->
                            </div>
                       
                        </div>
                    </div>
                </div>
            </div>

            <!-- wrapper end -->
            <%- include('./partials/footer.ejs') %>
            <!-- footer end -->
        </div>
        <!-- #page-wrapper end -->
    </div>

    <!-- #main wrapper end -->

    <%- include('./partials/script.ejs') %>
</body>

</html>